@model ProjetoLojaJogos.Models.Jogo
@{
    ViewBag.Title = "Cadastro de jogos";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<fieldset class="formulario">
    <legend>@ViewBag.Message</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Codigo)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Codigo)<br>
        @Html.ValidationMessageFor(model => model.Codigo)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Nome)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Nome)<br>
        @Html.ValidationMessageFor(model => model.Nome)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Versao)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Versao)<br>
        @Html.ValidationMessageFor(model => model.Versao)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Desenvolvedor)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Desenvolvedor)<br>
        @Html.ValidationMessageFor(model => model.Desenvolvedor)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Genero)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Genero)<br>
        @Html.ValidationMessageFor(model => model.Genero)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.FaixaEtaria)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.FaixaEtaria)<br>
        @Html.ValidationMessageFor(model => model.FaixaEtaria)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Plataforma)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Plataforma)<br>
        @Html.ValidationMessageFor(model => model.Plataforma)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.AnoLancamento)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.AnoLancamento)<br>
        @Html.ValidationMessageFor(model => model.AnoLancamento)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Sinopse)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Sinopse,
            new { htmlAttributes = new { @class = "textoJogoSinopse" } })
        <br>
        @Html.ValidationMessageFor(model => model.Sinopse)
    </div>
    <br>

    <input class="botaoCadastrar" type="submit" value="Cadastrar">
</fieldset>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval");
    }
}
