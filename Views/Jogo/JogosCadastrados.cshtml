@model IEnumerable<ProjetoLojaJogos.Models.Jogo>

@{
    ViewBag.Title = "Jogos Cadastrados";
}

<div class="container-lista-cadastro">
<h2>JogosCadastrados</h2>

<p>
    @Html.ActionLink("Cadastrar jogo", "Jogo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Versao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desenvolvedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FaixaEtaria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plataforma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinopse)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Versao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desenvolvedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FaixaEtaria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plataforma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnoLancamento)
        </td>
        <td style="width:200px;">
            @Html.DisplayFor(modelItem => item.Sinopse)
        </td>
        <td>
            @Html.ActionLink("Alterar", "AltJogo", null, new { codJogo = item.Codigo }, new { @class = "btn btn-primary btn-xs btnAlterar" })
            @Html.ActionLink("Deletar", "DelJogo", null, new { codJogo = item.Codigo }, new { @class = "btn btn-danger btn-xs btnDeletar" })
        </td>
    </tr>
}

</table>
</div>
